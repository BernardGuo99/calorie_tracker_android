<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FFFFFF</item>
        <item name="android:textColor">#873722</item>
    </style>
    <style name="RedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LineColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/lightgGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
        <item name="colorControlHighlight">@color/darkGreen</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColorHint">@color/darkGreen</item>
        <item name="android:textSize">16dp</item>

        <item name="colorAccent">@color/darkGreen</item>
        <item name="colorControlNormal">@color/darkGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
        <item name="android:textColorHighlight">@color/darkGreen</item>
        <item name="android:textColorLink">@color/darkGreen</item>
        <item name="colorControlHighlight">@color/darkGreen</item>

    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>


        <!--<item name="android:textColorHighlight">#009999</item>-->
        <!--<item name="android:textColorHint">#009999</item>-->
        <!--<item name="android:textColorLink">#009999</item>-->
        <!--<item name="textSize">16sp</item>-->
        <!--<item name="textStyle">normal</item>-->
    </style>
    <style name="hint_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#009999</item>
        <item name="android:textSize">16sp</item>


        <!--<item name="android:textColorHighlight">#009999</item>-->
        <!--<item name="android:textColorHint">#009999</item>-->
        <!--<item name="android:textColorLink">#009999</item>-->
        <!--<item name="textSize">16sp</item>-->
        <!--<item name="textStyle">normal</item>-->
    </style>

    <style name="AppTheme.PopTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
