<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FFFFFF</item>
        <item name="android:textColor">#873722</item>

    </style>

    <style name="LineColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#FFCCBF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">#FF3300</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColorHint">#009999</item>
        <item name="android:textSize">14dp</item>

        <item name="colorAccent">#009999</item>
        <item name="colorControlNormal">#009999</item>
        <item name="colorControlActivated">#009999</item>
        <item name="android:textColorHighlight">#009999</item>
        <item name="android:textColorLink">#009999</item>
        <item name="colorControlHighlight">#009999</item>






    </style>


</resources>
