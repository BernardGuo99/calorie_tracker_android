<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/fitness_santa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <TextClock
                    android:id="@+id/textClock"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgGreen"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/btnColor1"
                    android:textSize="24dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:id="@+id/set_goal">

        <TextView
            android:id="@+id/tv_goal_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Custom Your Calorie Goal For Today"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goal_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGreen"
            android:textSize="14dp"
            android:text=""/>

        <TextView
            android:id="@+id/goal_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set your today's calorie goal. We recommend calorie goals be between 1200 and 9000 per day, unless you have received specific recommendations for calorie intake from a doctor or nutritionist."
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>
