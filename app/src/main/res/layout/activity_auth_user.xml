<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_img">


    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CalorieTracker"
        android:textSize="@dimen/auth_title"
        android:textColor="@color/colorAuthTitle"
        android:shadowColor="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/auth_title_margin"
        android:alpha="0.8" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="@dimen/auth_title_margin"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_centerInParent="true"
        android:theme="@style/WhiteButton"
        android:textColor="#000000"
 />
    <Button
        android:id="@+id/b_signup"
        android:layout_width="@dimen/auth_title_margin"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_below="@id/b_login"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"/>

</RelativeLayout>